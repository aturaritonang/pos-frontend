<script type="text/javascript">
    $("#form-edit").submit(function () {
        var dataForm = new FormData($("#form-edit")[0]);
        $.ajax({
            url: this.action,
            type: this.method,
            data: dataForm,
            processData: false,
            contentType: false,
            success: function (result) {
                if (result) {
                    $(".modal-body").html(result);
                }
                GetList()
            }
        })
        return false;
    });
</script>